                  <JFXButton onAction="#CloseFrame" prefHeight="33.0" prefWidth="79.0" text="Cancel">
                     <HBox.margin>
                        <Insets left="30.0" />
                     </HBox.margin>
                     <styleClass>
                        <String fx:value="primaryBtn" />
                        <String fx:value="cancelBtn" />
                     </styleClass>
                  </JFXButton>
               </children>
            </HBox>
         </children>
